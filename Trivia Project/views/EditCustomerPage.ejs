<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <% include partials/head %>
  </head>
  <body>
    <% include partials/navigationLoggedInAdmin.ejs %>    
    <br/>
    <br/>
    <div class="container">
      <h3>Edit Customer</h3>
      <p>Change the customer details bellow.</p>
      <hr/>
      <br/>
      <form method="POST" action="/admin/EditCustomer/<%=data._id %>">
        <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">Full Name</label>
            <div class="col-sm-10">
              <input type="text" name="Customer_name" value="<%=data.Customer_name %>" required class="form-control" id="inputPassword" placeholder="Full Name">
            </div>
          </div>
      <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Customer CNIC</label>
        <div class="col-sm-10">
          <input type="text" name="Customer_CNIC" value="<%=data.Customer_CNIC %>" required class="form-control" id="inputPassword" placeholder="CNIC">
        </div>
      </div>
     <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">From</label>
        <div class="col-sm-10">
          <input type="text" name="Customer_From" value="<%=data.Customer_From %>" required class="form-control" id="inputPassword" placeholder="From">
        </div>
      </div>
    <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Status</label>
        <div class="col-sm-10">
          <select id="inputState" class="form-control" name="Customer_status">
            <option selected value="<%=data.Customer_status %>"><%=data.Customer_status %></option>
            <option value="Inactive">Inactive</option>
            <option value="Active">Active</option>
          </select>        
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
          <input type="password" value="<%=data.Customer_password %>" name="Customer_password"  required class="form-control" id="passInput"  placeholder="Password" >
        </div>
      </div>
     <div class="d-flex justify-content-between">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="defaultCheck1" onclick="ShowPassword()">
            <label class="form-check-label" for="defaultCheck1">
              Show password
            </label>
          </div>
    </div>
     <br/>
     <button type="submit" class="btn btn-dark btn-lg" style="padding:15px; background-color: #27ae60; border:none;">Save Changes</button>  
    </form> 

    </div>
    <% include partials/footer.ejs %>

    <% include partials/scripts %> 
  </body>
</html>
<!DOCTYPE html>
<html>

<head>
    <title><%= title %></title>
    <% include partials/head %>
</head>

<body>
    <% include partials/navigationLoggedIn.ejs %>

    <div class="container">

        <div class="jumbotron">
            <h1 class="display-4">All Transactions</h1>
            <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention
                to featured content or information.</p>        
            </div>

            <hr class="my-4">

        <div class="card">
            <h5 class="card-header">All Your Transactions</h5>
            <div class="card-body">

                <div style="display:block; height:300px;overflow-y : scroll;">
                   <% data.forEach(function(holder) { %>
                    <div class="card bg-dark text-white">
                        <div class="card-body">
                            Transaction ID
                            <h4 class="card-title"><%=holder.Transaction_ID%></h4>
                            <h6 class="card-subtitle mb-2 text-muted">FROM : <%=holder.From_Whom_card_no%></h6>
                            <h6 class="card-subtitle mb-2 text-muted">TO : <%=holder.To_Whom_card_no%></h6>
                            <p class="card-text"><b>TRANSACTION AMOUNT - Rs. <%=holder.Transaction_Amount%> /pkr</b></p>
                            <br />
                            <p class="card-text">DATE - <%=holder.Transaction_Date%></p>
                
                        </div>
                    </div>
                
                    <br />
                    <% }); %>

                </div>
            </div>
          </div>




</div>
        


    <% include partials/footer.ejs %>

    <% include partials/scripts %>
</body>

</html>